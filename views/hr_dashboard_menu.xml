<odoo>
    <!-- Dashboard Form View -->
    <record id="view_hr_dashboard_form" model="ir.ui.view">
        <field name="name">hr.dashboard.form</field>
        <field name="model">hr.dashboard</field>
        <field name="arch" type="xml">
            <form string="HR Dashboard" class="dashboard-form" create="0" edit="0" style="position: relative;">
                <style>
                    .o_control_panel {
                        border-bottom: 0;
                        padding-top: 0;
                        padding-right: 0;
                        padding-bottom: 0;
                        padding-left: 0;
                        visibility: hidden;
                    }
                    .o_form_nosheet {
                        padding-top: 0;
                    }
                </style>
                <div class="o_form_view_container" style="width: 90%; margin: auto;">
                    <!-- Header section with Dashboard title on the left and filters on the right -->
                    <div class="row align-items-center mt-3 mb-2">
                        
                        <!-- Left side (Dashboard Title) -->
                        <div class="col-md-6 col-sm-12 text-start">
                            <h1 class="my-0" style="text-align: right;">HR Dashboard</h1>
                        </div>

                    </div>

                    <!-- Last update info aligned to right -->
                    <div class="row mb-3">
                        <div class="col-12 text-end pe-3">
                            <span>Last update: <field name="last_update" readonly="1" class="d-inline"/></span>
                        </div>
                    </div>
                    
                    <!-- Dashboard content -->
                    <field name="dashboard_data" readonly="1" nolabel='1' widget="hr_dashboard"/>
                    
                    <!-- Hidden fields -->
                    <field name="company_id" groups="base.group_multi_company" invisible="1"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Dashboard Action -->
    <record id="action_hr_dashboard" model="ir.actions.act_window">
        <field name="name">HR Dashboard</field>
        <field name="res_model">hr.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'form_view_ref': 'hr_dashboard.view_hr_dashboard_form'}</field>
    </record>
</odoo>
