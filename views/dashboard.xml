<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Form View -->
    <record id="view_l1_dashboard_form" model="ir.ui.view">
        <field name="name">l1.dashboard.form</field>
        <field name="model">l1.dashboard</field>
        <field name="arch" type="xml">
            <form string="L1 Dashboard" class="dashboard-form" create="0" edit="0">
                <!-- <header>
                    <button name="action_refresh_data" string="Refresh Data" type="object" class="btn-primary"/>
                </header> -->
                <sheet style="width: 100%">
                    <h1 class='text-center bg-yellow p-2'>
                        L1 Dashboard
                    </h1>
                    <br />
                    <group>
                        <group>
                            <group>Filter</group>
                            <group>
                                <field name="year"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="month"/>
                            </group>
                            <field name="company_id" groups="base.group_multi_company" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="last_update" readonly="1" invisible="1"/>
                        </group>
                    </group>
                    <field name="dashboard_data" readonly="1" nolabel='1' widget="dashboard"/>
                    <!-- <div class="o_l1_dashboard_container">
                        <div class="alert alert-info" role="alert">
                            Use the filters above to select the period and click "View Dashboard" to see the visualized data.
                        </div>
                        <button name="action_view_dashboard" string="View Dashboard" type="object" class="btn btn-primary"/>
                    </div> -->
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dashboard Client Action -->
    <!-- <record id="action_l1_dashboard_client" model="ir.actions.client">
        <field name="name">L1 Dashboard</field>
        <field name="tag">l1_dashboard.dashboard</field>
    </record> -->
    
    <!-- Dashboard Action -->
    <record id="action_l1_dashboard" model="ir.actions.act_window">
        <field name="name">L1 Dashboard</field>
        <field name="res_model">l1.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'form_view_ref': 'l1_dashboard.view_l1_dashboard_form'}</field>
    </record>
</odoo>